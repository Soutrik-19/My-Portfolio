rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Allow any authenticated user to create a review in the 'reviews' collection.
    // Also, allow anyone to read the reviews.
    match /reviews/{reviewId} {
      allow read: if true;
      allow create: if request.auth != null;
    }

    // These are the default rules for a multi-user environment.
    // They are necessary for the app to function correctly.
    match /artifacts/{appId}/users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /artifacts/{appId}/public/data/{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}